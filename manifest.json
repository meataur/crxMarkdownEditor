{
    "manifest_version": 2,
    "name": "MDEditor",
    "description": "This extension makes it easy for you to post markdown document for static blog generator such as Jekyll",
    "version": "2.2.0",
    "offline_enabled": true,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/md16.png",
            "32": "images/md32.png",
            "64": "images/md64.png",
            "128": "images/md128.png"
        }
    },
    "icons": {
        "16": "images/md16.png",
        "128": "images/md128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "nativeMessaging",
        "http://localhost/*",
        "identity",
        "\u003Call_urls>"
    ],
    "oauth2": {
        "client_id": "305007837647-grlal934s6j9ki7mjb0s4e0106a564er.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/drive"]
    },
    "content_security_policy": "script-src 'self' https://accounts.google.com; object-src 'self'"
}
