{
    "manifest_version": 2,
    "name": "Markdown Editor for Easy Blog Posting",
    "description": "This extension makes it easy for you to post markdown document for static blog generator such as Jekyll",
    "version": "1.4.2",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/md16.png",
            "32": "images/md32.png",
            "64": "images/md64.png",
            "128": "images/md128.png"
        }
    },
    "permissions": [
        "storage",
        "downloads",
        "nativeMessaging",
        "http://localhost/*"
    ]
}
